{
  "version": 2,
  "builds": [
    {
      "src": "index.php",
      "use": "vercel-php@0.6.0"
    },
    {
      "src": "api/**/*.php",
      "use": "vercel-php@0.6.0"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*\\.(css|js|ico|png|jpg|jpeg|gif|svg))",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "env": {
    "DB_HOST": "@db_host",
    "DB_NAME": "@db_name", 
    "DB_USER": "@db_user",
    "DB_PASS": "@db_pass",
    "DB_PORT": "@db_port",
    "APP_NAME": "@app_name",
    "APP_URL": "@app_url",
    "JWT_SECRET": "@jwt_secret",
    "SESSION_TIMEOUT": "@session_timeout",
    "PAYU_MERCHANT_ID": "@payu_merchant_id",
    "PAYU_ACCOUNT_ID": "@payu_account_id",
    "PAYU_API_KEY": "@payu_api_key",
    "PAYU_TEST_MODE": "@payu_test_mode",
    "SMTP_HOST": "@smtp_host",
    "SMTP_PORT": "@smtp_port",
    "SMTP_USER": "@smtp_user",
    "SMTP_PASS": "@smtp_pass"
  }
}